%h1= @product.name

%p= image_tag @product.image_path

%h2 Product Description:
%p= @product.description

%h2 
  Total Votes:
  = @product.score

%ul
  - @product.votes.each do |vote|
    - unless vote.user.nil?
      %li= vote.user.username

%p= link_to "Edit", edit_product_path(@product)
%p= link_to "Delete", product_path(@product), method: :delete
%p= link_to "Vote Up", product_votes_path(@product), method: :post


